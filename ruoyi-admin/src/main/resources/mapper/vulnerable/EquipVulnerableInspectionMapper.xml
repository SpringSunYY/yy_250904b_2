    <select id="selectEquipVulnerableInspectionList" parameterType="EquipVulnerableInspection" resultMap="EquipVulnerableInspectionResult">
        <include refid="selectEquipVulnerableInspectionVo"/>
        <where>  
            <if test="equipmentName != null  and equipmentName != ''"> and equipment_name like concat('%', #{equipmentName}, '%')</if>
            <if test="vulnerablePartStatus != null  and vulnerablePartStatus != ''"> and vulnerable_part_status = #{vulnerablePartStatus}</if>
        </where>
    </select>
    
    <select id="selectEquipVulnerableInspectionById" parameterType="Long" resultMap="EquipVulnerableInspectionResult">
        <include refid="selectEquipVulnerableInspectionVo"/>
        where id = #{id}
