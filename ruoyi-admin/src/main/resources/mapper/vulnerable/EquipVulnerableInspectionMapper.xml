    <sql id="selectEquipVulnerableInspectionVo">
        select id, inspection_number, equipment_name, inspection_date, inspector, inspection_photos, vulnerable_part_status, problem_description, site_photos, handling_measures, handler, replaced_parts, after_replacement_photos, remarks, created_by, created_time, updated_by, updated_time from equip_vulnerable_inspection
