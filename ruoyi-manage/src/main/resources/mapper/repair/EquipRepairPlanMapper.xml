<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.repair.mapper.EquipRepairPlanMapper">
    <resultMap type="EquipRepairPlan" id="EquipRepairPlanResult">
        <result property="planId" column="plan_id"/>
        <result property="planNo" column="plan_no"/>
        <result property="planType" column="plan_type"/>
        <result property="equipId" column="equip_id"/>
        <result property="equipName" column="equip_name"/>
        <result property="equipCode" column="equip_code"/>
        <result property="equipLevels" column="equip_levels"/>
        <result property="planContent" column="plan_content"/>
        <result property="planTime" column="plan_time"/>
        <result property="budget" column="budget"/>
        <result property="appendix" column="appendix"/>
        <result property="planYear" column="plan_year"/>
        <result property="planMonth" column="plan_month"/>
        <result property="deptId" column="dept_id"/>
        <result property="deptName" column="dept_name"/>
        <result property="applyUserId" column="apply_user_id"/>
        <result property="applyUserName" column="apply_user_name"/>
        <result property="taskId" column="task_id"/>
        <result property="processInstanceId" column="process_instance_id"/>
        <result property="deployId" column="deploy_id"/>
        <result property="remark" column="remark"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectEquipRepairPlanVo">
        select plan_id,
               plan_no,
               plan_type,
               equip_id,
               equip_name,
               equip_code,
               equip_levels,
               plan_content,
               plan_time,
               budget,
               appendix,
               plan_year,
               plan_month,
               dept_id,
               dept_name,
               apply_user_id,
               apply_user_name,
               task_id,
               process_instance_id,
               deploy_id,
               remark,
               create_by,
               create_time,
               update_by,
               update_time
        from equip_repair_plan
    </sql>

    <select id="selectEquipRepairPlanList" parameterType="EquipRepairPlan" resultMap="EquipRepairPlanResult">
        <include refid="selectEquipRepairPlanVo"/>
        <where>
            <if test="planNo != null and planNo != ''">and plan_no like concat('%', #{planNo}, '%')</if>
            <if test="planType != null  and planType != ''">and plan_type = #{planType}</if>
            <if test="equipName != null  and equipName != ''">and equip_name like concat('%', #{equipName}, '%')</if>
            <if test="equipLevels != null  and equipLevels != ''">and equip_levels = #{equipLevels}</if>
        </where>
    </select>

    <select id="selectEquipRepairPlanByPlanId" parameterType="Long" resultMap="EquipRepairPlanResult">
        <include refid="selectEquipRepairPlanVo"/>
        where plan_id = #{planId}
    </select>

    <insert id="insertEquipRepairPlan" parameterType="EquipRepairPlan" useGeneratedKeys="true" keyProperty="planId">
        insert into equip_repair_plan
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="planNo != null and planNo != ''">plan_no,</if>
            <if test="planType != null">plan_type,</if>
            <if test="equipId != null">equip_id,</if>
            <if test="equipName != null">equip_name,</if>
            <if test="equipCode != null">equip_code,</if>
            <if test="equipLevels != null">equip_levels,</if>
            <if test="planContent != null">plan_content,</if>
            <if test="planTime != null">plan_time,</if>
            <if test="budget != null">budget,</if>
            <if test="appendix != null">appendix,</if>
            <if test="planYear != null">plan_year,</if>
            <if test="planMonth != null">plan_month,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="deptName != null">dept_name,</if>
            <if test="applyUserId != null">apply_user_id,</if>
            <if test="applyUserName != null">apply_user_name,</if>
            <if test="taskId != null">task_id,</if>
            <if test="processInstanceId != null">process_instance_id,</if>
            <if test="deployId != null">deploy_id,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="planNo != null and planNo != ''">#{planNo},</if>
            <if test="planType != null">#{planType},</if>
            <if test="equipId != null">#{equipId},</if>
            <if test="equipName != null">#{equipName},</if>
            <if test="equipCode != null">#{equipCode},</if>
            <if test="equipLevels != null">#{equipLevels},</if>
            <if test="planContent != null">#{planContent},</if>
            <if test="planTime != null">#{planTime},</if>
            <if test="budget != null">#{budget},</if>
            <if test="appendix != null">#{appendix},</if>
            <if test="planYear != null">#{planYear},</if>
            <if test="planMonth != null">#{planMonth},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="deptName != null">#{deptName},</if>
            <if test="applyUserId != null">#{applyUserId},</if>
            <if test="applyUserName != null">#{applyUserName},</if>
            <if test="taskId != null">#{taskId},</if>
            <if test="processInstanceId != null">#{processInstanceId},</if>
            <if test="deployId != null">#{deployId},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateEquipRepairPlan" parameterType="EquipRepairPlan">
        update equip_repair_plan
        <trim prefix="SET" suffixOverrides=",">
            <if test="planNo != null and planNo != ''">plan_no = #{planNo},</if>
            <if test="planType != null">plan_type = #{planType},</if>
            <if test="equipId != null">equip_id = #{equipId},</if>
            <if test="equipName != null">equip_name = #{equipName},</if>
            <if test="equipCode != null">equip_code = #{equipCode},</if>
            <if test="equipLevels != null">equip_levels = #{equipLevels},</if>
            <if test="planContent != null">plan_content = #{planContent},</if>
            <if test="planTime != null">plan_time = #{planTime},</if>
            <if test="budget != null">budget = #{budget},</if>
            <if test="appendix != null">appendix = #{appendix},</if>
            <if test="planYear != null">plan_year = #{planYear},</if>
            <if test="planMonth != null">plan_month = #{planMonth},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="deptName != null">dept_name = #{deptName},</if>
            <if test="applyUserId != null">apply_user_id = #{applyUserId},</if>
            <if test="applyUserName != null">apply_user_name = #{applyUserName},</if>
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="processInstanceId != null">process_instance_id = #{processInstanceId},</if>
            <if test="deployId != null">deploy_id = #{deployId},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where plan_id = #{planId}
    </update>

    <delete id="deleteEquipRepairPlanByPlanId" parameterType="Long">
        delete
        from equip_repair_plan
        where plan_id = #{planId}
    </delete>

    <delete id="deleteEquipRepairPlanByPlanIds" parameterType="String">
        delete from equip_repair_plan where plan_id in
        <foreach item="planId" collection="array" open="(" separator="," close=")">
            #{planId}
        </foreach>
    </delete>
</mapper>
