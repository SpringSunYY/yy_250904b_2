<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.pur.mapper.EquipPurchaseOrderMapper">

    <resultMap type="EquipPurchaseOrder" id="EquipPurchaseOrderResult">
        <result property="orderId" column="order_id"/>
        <result property="orderNo" column="order_no"/>
        <result property="equipName" column="equip_name"/>
        <result property="supplierId" column="supplier_id"/>
        <result property="supplierName" column="supplier_name"/>
        <result property="deptId" column="dept_id"/>
        <result property="deptName" column="dept_name"/>
        <result property="applyUserId" column="apply_user_id"/>
        <result property="applyUserName" column="apply_user_name"/>
        <result property="applyTime" column="apply_time"/>
        <result property="arriveTime" column="arrive_time"/>
        <result property="unitAmount" column="unit_amount"/>
        <result property="budgetAmount" column="budget_amount"/>
        <result property="purchasingReason" column="purchasing_reason"/>
        <result property="appendix" column="appendix"/>
        <result property="taskId" column="task_id"/>
        <result property="processInstanceId" column="process_instance_id"/>
        <result property="deployId" column="deploy_id"/>
        <result property="orderStatus" column="order_status"/>
        <result property="remark" column="remark"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <resultMap id="EquipPurchaseOrderEquipPurchaseOrderItemResult" type="EquipPurchaseOrder"
               extends="EquipPurchaseOrderResult">
        <collection property="equipPurchaseOrderItemList" ofType="EquipPurchaseOrderItem" column="order_id"
                    select="selectEquipPurchaseOrderItemList"/>
    </resultMap>

    <resultMap type="EquipPurchaseOrderItem" id="EquipPurchaseOrderItemResult">
        <result property="itemId" column="item_id"/>
        <result property="orderId" column="order_id"/>
        <result property="equipmentName" column="equipment_name"/>
        <result property="specification" column="specification"/>
        <result property="quantity" column="quantity"/>
        <result property="unitPrice" column="unit_price"/>
        <result property="totalPrice" column="total_price"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectEquipPurchaseOrderVo">
        select order_id,
               order_no,
               equip_name,
               supplier_id,
               supplier_name,
               dept_id,
               dept_name,
               apply_user_id,
               apply_user_name,
               apply_time,
               arrive_time,
               unit_amount,
               budget_amount,
               purchasing_reason,
               appendix,
               task_id,
               process_instance_id,
               deploy_id,
               order_status,
               remark,
               create_by,
               create_time,
               update_by,
               update_time
        from equip_purchase_order
    </sql>

    <select id="selectEquipPurchaseOrderList" parameterType="EquipPurchaseOrder" resultMap="EquipPurchaseOrderResult">
        <include refid="selectEquipPurchaseOrderVo"/>
        <where>
            <if test="supplierName != null  and supplierName != ''">and supplier_name like concat('%', #{supplierName},
                '%')
            </if>
            <if test="deptName != null  and deptName != ''">and dept_name like concat('%', #{deptName}, '%')</if>
            <if test="applyUserName != null  and applyUserName != ''">and apply_user_name like concat('%',
                #{applyUserName}, '%')
            </if>
            <if test="orderStatus != null  and orderStatus != ''">and order_status = #{orderStatus}</if>
        </where>
    </select>

    <select id="selectEquipPurchaseOrderByOrderId" parameterType="Long"
            resultMap="EquipPurchaseOrderEquipPurchaseOrderItemResult">
        select order_id,
               order_no,
               equip_name,
               supplier_id,
               supplier_name,
               dept_id,
               dept_name,
               apply_user_id,
               apply_user_name,
               apply_time,
               arrive_time,
               unit_amount,
               budget_amount,
               purchasing_reason,
               appendix,
               task_id,
               process_instance_id,
               deploy_id,
               order_status,
               remark,
               create_by,
               create_time,
               update_by,
               update_time
        from equip_purchase_order
        where order_id = #{orderId}
    </select>

    <select id="selectEquipPurchaseOrderItemList" resultMap="EquipPurchaseOrderItemResult">
        select item_id,
               order_id,
               equipment_name,
               specification,
               quantity,
               unit_price,
               total_price,
               create_by,
               create_time,
               update_by,
               update_time
        from equip_purchase_order_item
        where order_id = #{order_id}
    </select>

    <insert id="insertEquipPurchaseOrder" parameterType="EquipPurchaseOrder" useGeneratedKeys="true"
            keyProperty="orderId">
        insert into equip_purchase_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderNo != null">order_no,</if>
            <if test="equipName != null">equip_name,</if>
            <if test="supplierId != null">supplier_id,</if>
            <if test="supplierName != null">supplier_name,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="deptName != null">dept_name,</if>
            <if test="applyUserId != null">apply_user_id,</if>
            <if test="applyUserName != null">apply_user_name,</if>
            <if test="applyTime != null">apply_time,</if>
            <if test="arriveTime != null">arrive_time,</if>
            <if test="unitAmount != null">unit_amount,</if>
            <if test="budgetAmount != null">budget_amount,</if>
            <if test="purchasingReason != null and purchasingReason != ''">purchasing_reason,</if>
            <if test="appendix != null">appendix,</if>
            <if test="taskId != null">task_id,</if>
            <if test="processInstanceId != null">process_instance_id,</if>
            <if test="deployId != null">deploy_id,</if>
            <if test="orderStatus != null">order_status,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderNo != null">#{orderNo},</if>
            <if test="equipName != null">#{equipName},</if>
            <if test="supplierId != null">#{supplierId},</if>
            <if test="supplierName != null">#{supplierName},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="deptName != null">#{deptName},</if>
            <if test="applyUserId != null">#{applyUserId},</if>
            <if test="applyUserName != null">#{applyUserName},</if>
            <if test="applyTime != null">#{applyTime},</if>
            <if test="arriveTime != null">#{arriveTime},</if>
            <if test="unitAmount != null">#{unitAmount},</if>
            <if test="budgetAmount != null">#{budgetAmount},</if>
            <if test="purchasingReason != null and purchasingReason != ''">#{purchasingReason},</if>
            <if test="appendix != null">#{appendix},</if>
            <if test="taskId != null">#{taskId},</if>
            <if test="processInstanceId != null">#{processInstanceId},</if>
            <if test="deployId != null">#{deployId},</if>
            <if test="orderStatus != null">#{orderStatus},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateEquipPurchaseOrder" parameterType="EquipPurchaseOrder">
        update equip_purchase_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderNo != null">order_no = #{orderNo},</if>
            <if test="equipName != null">equip_name = #{equipName},</if>
            <if test="supplierId != null">supplier_id = #{supplierId},</if>
            <if test="supplierName != null">supplier_name = #{supplierName},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="deptName != null">dept_name = #{deptName},</if>
            <if test="applyUserId != null">apply_user_id = #{applyUserId},</if>
            <if test="applyUserName != null">apply_user_name = #{applyUserName},</if>
            <if test="applyTime != null">apply_time = #{applyTime},</if>
            <if test="arriveTime != null">arrive_time = #{arriveTime},</if>
            <if test="unitAmount != null">unit_amount = #{unitAmount},</if>
            <if test="budgetAmount != null">budget_amount = #{budgetAmount},</if>
            <if test="purchasingReason != null">purchasing_reason = #{purchasingReason},</if>
            <if test="appendix != null">appendix = #{appendix},</if>
            <if test="processInstanceId != null">process_instance_id = #{processInstanceId},</if>
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="deployId != null">deploy_id = #{deployId},</if>
            <if test="orderStatus != null">order_status = #{orderStatus},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where order_id = #{orderId}
    </update>

    <delete id="deleteEquipPurchaseOrderByOrderId" parameterType="Long">
        delete
        from equip_purchase_order
        where order_id = #{orderId}
    </delete>

    <delete id="deleteEquipPurchaseOrderByOrderIds" parameterType="String">
        delete from equip_purchase_order where order_id in
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>

    <delete id="deleteEquipPurchaseOrderItemByOrderIds" parameterType="String">
        delete from equip_purchase_order_item where order_id in
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>

    <delete id="deleteEquipPurchaseOrderItemByOrderId" parameterType="Long">
        delete
        from equip_purchase_order_item
        where order_id = #{orderId}
    </delete>

    <insert id="batchEquipPurchaseOrderItem">
        insert into equip_purchase_order_item( item_id, order_id, equipment_name, specification, quantity, unit_price,
        total_price, create_by, create_time, update_by, update_time) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.itemId}, #{item.orderId}, #{item.equipmentName}, #{item.specification}, #{item.quantity},
            #{item.unitPrice}, #{item.totalPrice}, #{item.createBy}, #{item.createTime}, #{item.updateBy},
            #{item.updateTime})
        </foreach>
    </insert>
</mapper>
