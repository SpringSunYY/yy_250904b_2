<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.vulnerable.mapper.EquipmentVulnerableInfoMapper">
    
    <resultMap type="EquipmentVulnerableInfo" id="EquipmentVulnerableInfoResult">
        <result property="id"    column="id"    />
        <result property="vulnerableNumber"    column="vulnerable_number"    />
        <result property="equipmentName"    column="equipment_name"    />
        <result property="vulnerableType"    column="vulnerable_type"    />
        <result property="vulnerablePart"    column="vulnerable_part"    />
        <result property="installationLocation"    column="installation_location"    />
        <result property="replacementCycleMonths"    column="replacement_cycle_months"    />
        <result property="currentStatus"    column="current_status"    />
        <result property="remarks"    column="remarks"    />
        <result property="createdBy"    column="created_by"    />
        <result property="createdTime"    column="created_time"    />
        <result property="updatedBy"    column="updated_by"    />
        <result property="updatedTime"    column="updated_time"    />
    </resultMap>

    <sql id="selectEquipmentVulnerableInfoVo">
        select id, vulnerable_number, equipment_name, vulnerable_type, vulnerable_part, installation_location, replacement_cycle_months, current_status, remarks, created_by, created_time, updated_by, updated_time from equipment_vulnerable_info
    </sql>

    <select id="selectEquipmentVulnerableInfoList" parameterType="EquipmentVulnerableInfo" resultMap="EquipmentVulnerableInfoResult">
        <include refid="selectEquipmentVulnerableInfoVo"/>
        <where>  
            <if test="equipmentName != null  and equipmentName != ''"> and equipment_name like concat('%', #{equipmentName}, '%')</if>
            <if test="vulnerableType != null  and vulnerableType != ''"> and vulnerable_type = #{vulnerableType}</if>
        </where>
    </select>
    
    <select id="selectEquipmentVulnerableInfoById" parameterType="Long" resultMap="EquipmentVulnerableInfoResult">
        <include refid="selectEquipmentVulnerableInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertEquipmentVulnerableInfo" parameterType="EquipmentVulnerableInfo" useGeneratedKeys="true" keyProperty="id">
        insert into equipment_vulnerable_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="vulnerableNumber != null">vulnerable_number,</if>
            <if test="equipmentName != null">equipment_name,</if>
            <if test="vulnerableType != null">vulnerable_type,</if>
            <if test="vulnerablePart != null">vulnerable_part,</if>
            <if test="installationLocation != null">installation_location,</if>
            <if test="replacementCycleMonths != null">replacement_cycle_months,</if>
            <if test="currentStatus != null">current_status,</if>
            <if test="remarks != null">remarks,</if>
            <if test="createdBy != null">created_by,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="updatedBy != null">updated_by,</if>
            <if test="updatedTime != null">updated_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="vulnerableNumber != null">#{vulnerableNumber},</if>
            <if test="equipmentName != null">#{equipmentName},</if>
            <if test="vulnerableType != null">#{vulnerableType},</if>
            <if test="vulnerablePart != null">#{vulnerablePart},</if>
            <if test="installationLocation != null">#{installationLocation},</if>
            <if test="replacementCycleMonths != null">#{replacementCycleMonths},</if>
            <if test="currentStatus != null">#{currentStatus},</if>
            <if test="remarks != null">#{remarks},</if>
            <if test="createdBy != null">#{createdBy},</if>
            <if test="createdTime != null">#{createdTime},</if>
            <if test="updatedBy != null">#{updatedBy},</if>
            <if test="updatedTime != null">#{updatedTime},</if>
         </trim>
    </insert>

    <update id="updateEquipmentVulnerableInfo" parameterType="EquipmentVulnerableInfo">
        update equipment_vulnerable_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="vulnerableNumber != null">vulnerable_number = #{vulnerableNumber},</if>
            <if test="equipmentName != null">equipment_name = #{equipmentName},</if>
            <if test="vulnerableType != null">vulnerable_type = #{vulnerableType},</if>
            <if test="vulnerablePart != null">vulnerable_part = #{vulnerablePart},</if>
            <if test="installationLocation != null">installation_location = #{installationLocation},</if>
            <if test="replacementCycleMonths != null">replacement_cycle_months = #{replacementCycleMonths},</if>
            <if test="currentStatus != null">current_status = #{currentStatus},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
            <if test="createdBy != null">created_by = #{createdBy},</if>
            <if test="createdTime != null">created_time = #{createdTime},</if>
            <if test="updatedBy != null">updated_by = #{updatedBy},</if>
            <if test="updatedTime != null">updated_time = #{updatedTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteEquipmentVulnerableInfoById" parameterType="Long">
        delete from equipment_vulnerable_info where id = #{id}
    </delete>

    <delete id="deleteEquipmentVulnerableInfoByIds" parameterType="String">
        delete from equipment_vulnerable_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>