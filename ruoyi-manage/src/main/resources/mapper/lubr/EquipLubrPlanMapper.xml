    <select id="selectEquipLubrPlanList" parameterType="EquipLubrPlan" resultMap="EquipLubrPlanResult">
        <include refid="selectEquipLubrPlanVo"/>
        <where>
            <if test="equipName != null  and equipName != ''">and equip_name like concat('%', #{equipName}, '%')</if>
            <if test="equCode != null  and equCode != ''">and equ_code like concat('%', #{equCode}, '%')</if>
