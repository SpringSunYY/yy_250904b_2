    <sql id="selectBizContractorProjectVo">
        select project_id, project_code, project_name, project_content, project_type, project_budget, project_location, planned_start_date, planned_end_date, actual_start_date, actual_end_date, technical_requirements, responsible_department, project_leader, project_status, created_by, created_at, remark, updated_by, updated_at from biz_contractor_project
    </sql>

    <select id="selectBizContractorProjectList" parameterType="BizContractorProject" resultMap="BizContractorProjectResult">
        <include refid="selectBizContractorProjectVo"/>
        <where>  
            <if test="projectName != null  and projectName != ''"> and project_name like concat('%', #{projectName}, '%')</if>
            <if test="projectType != null  and projectType != ''"> and project_type = #{projectType}</if>
            <if test="responsibleDepartment != null  and responsibleDepartment != ''"> and responsible_department = #{responsibleDepartment}</if>
            <if test="projectLeader != null  and projectLeader != ''"> and project_leader = #{projectLeader}</if>
        </where>
    </select>
    
    <select id="selectBizContractorProjectByProjectId" parameterType="Long" resultMap="BizContractorProjectResult">
        <include refid="selectBizContractorProjectVo"/>
        where project_id = #{projectId}
    </select>

