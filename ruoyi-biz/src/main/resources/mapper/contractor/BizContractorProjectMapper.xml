        delete from biz_contractor_project where project_id in 
        <foreach item="projectId" collection="array" open="(" separator="," close=")">
            #{projectId}
        </foreach>
    </delete>

    <select id="selectMaxProjectCodeOfYear" parameterType="String" resultType="String">
        SELECT project_code
        FROM biz_contractor_project
        WHERE project_code LIKE CONCAT('XM', #{year}, '%')
        ORDER BY project_code DESC
        LIMIT 1
